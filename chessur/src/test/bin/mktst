#!/bin/bash

SCRIPT_PATH="${BASH_SOURCE[0]}"
if([ -h "${SCRIPT_PATH}" ]) then
  while([ -h "${SCRIPT_PATH}" ])
  do 
    SCRIPT_PATH=`readlink "${SCRIPT_PATH}"`
  done
fi
pushd `dirname ${SCRIPT_PATH}` > /dev/null
cd ../resources/cat

[ ! -d $1 ] && exit 1
[ -e $2 ] && exit 1

mkdir $2
for f in $(ls $1)
do
  cp $1/$f $2/$2.${f#*.}
done

popd > /dev/null

